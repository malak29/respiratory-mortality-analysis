# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/respiratory_db

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=43200
ENVIRONMENT=development
LOG_LEVEL=INFO

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MODEL_REGISTRY_URI=models

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL=admin@yourcompany.com

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,api.respiratory-mortality.com
CORS_ORIGINS=http://localhost:3000,https://yourfrontend.com

# Performance Configuration
WORKER_CONCURRENCY=4
MAX_REQUESTS_PER_WORKER=1000
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Cache Configuration
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=20

# File Upload Configuration
MAX_UPLOAD_SIZE=100MB
ALLOWED_UPLOAD_TYPES=.csv,.xlsx

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Model Configuration
AUTO_RETRAIN_SCHEDULE=0 2 * * 0
MODEL_VALIDATION_THRESHOLD=0.7
MAX_MODELS_PER_TYPE=5

# Backup Configuration
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# Development Configuration
DEBUG=false
RELOAD_ON_CHANGE=false
API_DOCS_ENABLED=true